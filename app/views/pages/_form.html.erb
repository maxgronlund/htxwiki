<%= form_for(@page) do |f| %>
	<% if @page.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>
	
	    <ul>
	    <% @page.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

	<% if current_user.super?%>
  		<div class="field">
  		  <%= t('page.identification')%><br />
  		  <%= f.text_field :identity %>
  		</div>
	<%end%>
	
	<div class="field">
		<%#= t('user.language')%><br/>
		<%#= f.select(:language, User::LANGUAGE)%><br/>
	</div>
	<div class="field">
    	<%= t('system.title')%><br />
    	<%= f.text_field :title %>
  	</div>

  	<div class="field">
  	  <%= t('system.body')%><br />
  	  <%= f.text_area :body, :class => "mceEditor"%>
  	</div>

	<div class="grid_6 suffix_6 alpha omega text_right">
  		<div class="actions">
  		  <%= f.submit t('admin.save') %>
  		</div>
	</div>
<% end %>
